<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel styleName="post">

		<div class="flags"><g:FlowPanel ui:field="countreePanel"></g:FlowPanel></div>
		<div class="post-left"><g:Image ui:field="image" styleName="flogo"></g:Image></div>
		<div class="post-right">
			<div class="title">
				<strong><g:InlineLabel ui:field="name"></g:InlineLabel></strong>
				<span class="smalltext"><g:InlineLabel ui:field="originalName"></g:InlineLabel></span>
			</div>
			<div class="info">
				<table cellpadding="2" cellspacing="0">
					<colgroup><col width="85px"/><col/></colgroup>
					<tbody>
						<tr>
							<td>Год:</td>
							<td>
								<g:InlineHyperlink ui:field="year"></g:InlineHyperlink>
							</td>
						</tr>
						<tr>
							<td>Жанр:</td>
							<td>
								<g:FlowPanel ui:field="genreePanel"></g:FlowPanel>
							</td>
						</tr>
						<tr>
							<td>Режиссер:</td>
							<td>
								<g:FlowPanel ui:field="directorPanel"></g:FlowPanel>
							</td>
						</tr>
						<tr>
							<td>В ролях:</td>
							<td>
								<g:FlowPanel ui:field="actorPanel"></g:FlowPanel>
							</td>
						</tr>
						<tr>
							<td>Коробка/Диск:</td>
							<td>
								<g:InlineHyperlink ui:field="box"></g:InlineHyperlink> / 
								<g:InlineHyperlink ui:field="disc"></g:InlineHyperlink>
							</td>
						</tr>
						<tr>
							<td>Время, мин:</td>
							<td><g:InlineLabel ui:field="time"></g:InlineLabel></td>
						</tr>
					</tbody>
				</table>
				
			</div>
			<g:Anchor ui:field="edit" styleName="edit" title="редактировать"><div class="edit-btn"/></g:Anchor>
			<g:InlineLabel ui:field="description" styleName="desc smalltext"></g:InlineLabel>
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 